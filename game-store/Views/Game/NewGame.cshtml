@model EditGameViewModel

<div class="comment-form-warp">
    <h4 class="comment-title">Add new game</h4>
    <form id="newGameForm" class="comment-form" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Image" />
        <div class="blog-thumb set-bg" data-setbg="@(Model.GameImageUrl)">
        </div>
        <div class="row">
            <div class="col-md-6">
                <input asp-for="Title" type="text" placeholder="Title" required>
            </div>
            <div class="col-md-6">
                <input type="file" asp-for="UploadedImage" />
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editGenres">
                    Add / remove genre
                </button>
                <div class="modal fade" id="editGenres" tabindex="-1" aria-labelledby="gameGenresEditLbl" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="gameGenresEditLbl">Edit game genres</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <div class="row g-3 align-items-end">
                                        <partial name="_GenresView" model="@(Model.GenreModels)" />
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Apply</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <input asp-for="Price" type="number" step="0.01" placeholder="Price" required>
            </div>
            <div class="col-lg-12">
                <textarea asp-for="Description" placeholder="Description" required></textarea>
                <button id="addNewGameBtn" type="submit" class="site-btn btn-sm">Submit</button>
            </div>
        </div>
    </form>
</div>