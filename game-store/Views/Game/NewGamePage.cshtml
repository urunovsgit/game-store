@model EditGameViewModel

@{
    string imgDataUrl;
    if (Model.Image != null)
    {
        var gameImage = Convert.ToBase64String(Model.Image);
        imgDataUrl = string.Format("data:image/jpg;base64,{0}", gameImage);
    }
    else
    {
        imgDataUrl = "/img/default-game-image.jpeg";
    }
}

<div class="comment-form-warp">
    <h4 class="comment-title">Add new game</h4>
    <form class="comment-form" asp-controller="Game" asp-action="AddGame" enctype="multipart/form-data">
        <div class="blog-thumb set-bg" data-setbg="@imgDataUrl">
        </div>
        <div class="row">
            <div class="col-md-6">
                <input asp-for="Title" type="text" placeholder="Title" required>
            </div>
            <div class="col-md-6">
                <input type="file" asp-for="UploadedImage" />
                <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editGenres">
                    Add / remove genre
                </button>
                <partial name="_GenresView"/>
            </div>
            <div class="col-lg-12">
                @*<input type="text" placeholder="Subject" disabled="disabled"> @*Here should be Genres input*@
                <textarea asp-for="Description" placeholder="Description"></textarea>
                <button type="submit" class="site-btn btn-sm">Submit</button>
            </div>
        </div>
    </form>
</div>